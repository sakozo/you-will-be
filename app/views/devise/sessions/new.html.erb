<%= stylesheet_link_tag "book/login_page", :media => "all" %>
<%= render partial: "template/login_page_top",  locals: {guide_message: "ログイン（アカウントをお持ちの方）"}%>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? && false %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "OK!",class: "button" %>
  </div>
<% end %>

<%= link_to "登録（アカウントをお持ちでない方はこちら）", new_registration_path(resource_name),class: "button link" %>
