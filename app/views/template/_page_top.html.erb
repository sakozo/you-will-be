<%= stylesheet_link_tag "book/page_top", :media => "all" %>
<div class="title_area">
  <div class="title_area__title">
    <h1>You will be...?</h1>
  </div>

  <% if request.path.slice(0..6) == "/users/" && request.path.slice(7..14) != "rankings" %>
    <div class="title_area__ranking_button">
    <%= link_to "ランキングページへ", users_rankings_path , class: "btn btn-success" %>
    </div>
  <% elsif request.path.slice(0..15) == "/users/rankings" %>
