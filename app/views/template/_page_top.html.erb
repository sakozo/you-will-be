    <%= link_to  "マイページへ", user_path(current_user.id) ,class: "btn btn-primary"%>
    </div>
    <div class="title_area__ranking_button">
    <%= link_to "全体ランキングへ", users_ranking_path(current_user.id) , class: "btn btn-danger" %>
